{
  "compilerOptions": {
    // Cible d’output JS moderne
    "target": "ESNext",

    // Module à utiliser côté Node.js moderne (compatible import/export)
    "module": "ESNext",

    // Résolution des modules à la Node.js
    "moduleResolution": "Node",

    // Générer les sourcemaps (pratique pour debug)
    "sourceMap": true,

    // Générer les types déclarés (utile si tu veux publier la lib)
    "declaration": true,
    "declarationMap": true,

    // Type checking strict
    "strict": true,

    // Permet l'import CommonJS dans ESModules
    "esModuleInterop": true,

    // Ignore la vérif des fichiers externes pour accélérer la compilation
    "skipLibCheck": true,

    // Sortie compilée dans ce dossier
    "outDir": "./dist",

    // Pas besoin de JSX dans le backend
    "jsx": "preserve",

    // Autres options pour Node.js modernes
    "verbatimModuleSyntax": true,
    "isolatedModules": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,
    "noUncheckedSideEffectImports": true,
    "moduleDetection": "force"
  },
  "include": ["src"]
}
